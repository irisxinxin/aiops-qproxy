Q_BIN=/home/ubuntu/.local/bin/q
NO_COLOR=1
CLICOLOR=0
TERM=dumb
 
# —— 极简模式开关 ——
AIOPS_TERSE=1                 # 严格要求 Q 仅返回 schema JSON
AIOPS_KEEP_JSON_ONLY=1        # 仅保留 JSON 块，其它文本丢弃
AIOPS_DROP_BOILERPLATE=1      # 丢弃“我理解/请提供/How can I help”这类模板语
AIOPS_LOG_MAX_LINES=400       # 每次运行日志截断行数（可再小）
AIOPS_LOG_SUMMARY_ONLY=1      # 日志里只留简要摘要+JSON，不落完整对话

# —— 可选：自定义丢弃正则（逗号分隔，多条）——
AIOPS_DROP_PATTERNS="^(I understand|我理解|请提供|我注意到|Could you|请继续提供|• ),^> ,^!> ,^\s*$"

